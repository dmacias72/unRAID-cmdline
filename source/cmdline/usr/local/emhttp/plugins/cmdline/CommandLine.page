<? require_once '/usr/local/emhttp/plugins/cmdline/include/cmdline_config.php'; ?>
<link type="text/css" rel="stylesheet" href="/plugins/cmdline/css/cmdline.css">

<div>
    <iframe id="shell" src="<?=htmlspecialchars($shellinabox_http);?>://<?=htmlspecialchars($shellinabox_host);?>:<?=htmlspecialchars($shellinabox_port);?>">
    </iframe>
</div>

<script type="text/javascript">
$(function(){
    $('.tabs')
        .append('<div class="tab"><input type="radio" name="tabs2" id="tab2"><label for="tab2"><img class="icon" src="/plugins/cmdline/icons/settings.png">Settings</label></div>')
        .append('<span class="status">Status: <?=addslashes($shellinabox_status);?> </span>');

    // hide dummy tab
    $('#tab2').parent().hide();

    // goto Command Line Settings Menu
    $('#tab2').click(function() {
        $.cookie('one', 'tab1', { expires:null, path: '/'});
        location = '/Settings/CommandLineSettingsTabs';
    });

    // dynamix plugin update api
    <?if (function_exists('plugin_update_available') && $version = plugin_update_available('cmdline')):?>
        showNotice('Command Line <?=htmlspecialchars($version);?> available. <a>Update</a>','cmdline');
        $('#user-notice a').on('click', function () {
            $('#user-notice').empty();
        });
    <?endif;?>

    $('#settings').click(function() {
        location = '/Settings/CommandLineSettings';
    });
});
</script>